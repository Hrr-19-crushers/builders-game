{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "outDir": "build/server",
        "jsx": "preserve"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/server/**/*",
        "type-declarations/*"
    ]
}