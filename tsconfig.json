{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "outDir": "build",
        "jsx": "preserve",
        "rootDirs": ["src/server"]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/server/**/*"
    ]
}